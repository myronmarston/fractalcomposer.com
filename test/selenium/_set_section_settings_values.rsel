    :verify_value_changing => verify_values_changing

include_partial 'set_checkbox_value',
    :id => "#{section_settings_prefix}__section_settings_apply_retrograde",
    :value => apply_retrograde,
    :ajax => false,
    :verify_value_changing => verify_values_changing

