	<div  id="menu">
		<ul>    
                        <% get_menu_items.each do |menu_item| -%>                            
                            <li<%= " id=\"current\"" if menu_item[:is_current].call(menu_item[:options]) %>>
                              <%= link_to(menu_item[:name], menu_item[:options]) %>
                            </li>
                        <% end -%>			
		</ul>
	</div>					
			
	<!-- content-wrap starts here -->
	<div id="content-wrap">
		
		<div id="main">											
                    <%= yield %>
		</div>		
