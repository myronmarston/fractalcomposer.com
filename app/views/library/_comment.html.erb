<div class="comment" id="<%= comment.html_div_id %>">
    <span class="comment_author_name">
        <%= link_to_unless(comment.author_website.nil? || comment.author_website == '',
            h(comment.author_name),
            h(comment.author_website)) %> said: <%= "(preview)" if comment.is_preview? %>
    </span>

    <div class="comment_created_at">
        <%= comment.created_at_description %>
    </div>

    <div class="comment_comment">
        <%= sanitize(simple_format(comment.comment)) %>        
    </div>
</div>

