<%#
# Taken from:
# http://joliclic.free.fr/html/object-tag/en/object-audio.html#mid
%>
<% if midi_filename -%>   
  &nbsp;     
  <object class="midi_player" id="<%= div_id %>" type="audio/x-midi" data="<%= midi_filename %>" width="200" height="20">
    <param name="src" value="<%= midi_filename %>" />
    <param name="autoplay" value="false" />
    <param name="autoStart" value="0" />
      alt : <a href="<%= midi_filename %>">Germ Midi File</a>
  </object>  
<% else -%>
  <%# create an empty span with the same div id, just so we always have something with this id...%>
  <span id="<%= div_id %>" />
<% end -%>