<%
    # The midi_player partial only includes the midi player if the filename is not null.
    # For the image tag, we need to check that here.
-%>
<%= render :partial => 'midi_player', 
           :locals => {:midi_filename => midi_filename, 
                       :div_id => midi_player_div_id} %>
<br />
<% if image_filename %>
    <% clear_computed_public_path_for_image(image_filename) %>
    <%= image_tag(image_filename, :alt => 'Music Notation', :id => image_div_id) %>
<% end -%>